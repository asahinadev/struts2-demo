<Context>

	<Resource
		type="javax.sql.DataSource"
		auth="Container"
		name="jdbc/struts2-demo"
		url="jdbc:mysql://localhost/struts2-demo?useSSL=FALSE&amp;serverTimezone=JST&amp;"
		driverClassName="com.mysql.cj.jdbc.Driver"
		username="struts2-demo"
		password="struts2-demo"
		validationQuery="SELECT 1 FROM DUAL"
		maxActive="10"
		maxIdle="3"
		maxWait="10000"
	>
	</Resource>

	<Realm
		className="org.apache.catalina.realm.DataSourceRealm"
		digest="cleartext"
		userTable="users"
		userNameCol="username"
		userCredCol="password"
		userRoleTable="v_user_roles"
		roleNameCol="rolename"
		localDataSource="true"
		dataSourceName="jdbc/struts2-demo"
	>
	</Realm>

</Context>