<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<package name="application" namespace="" extends="convention-default">

		<interceptors>

			<interceptor name="flyway"
				class="com.example.struts2.example.interceptor.FlywayInterceptor"/>
			<interceptor name="mybatis"
				class="com.example.struts2.example.interceptor.MyBatisInterceptor"/>

			<interceptor-stack name="MyBatisStack">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="flyway"/>
				<interceptor-ref name="mybatis"/>
			</interceptor-stack>

		</interceptors>

		<default-interceptor-ref name="MyBatisStack"/>

	</package>
</struts>